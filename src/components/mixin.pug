mixin createMenu(menu, active)
    each value, key in menu
        if active == key
            a.active(href= value)= key
        else
            a(href= value)= key 
mixin createGallery(gallery)
    each item in gallery
        .gallery__tile
          a(href= item.name + '.html')
            img(src=require('../images/'+item.img))
mixin createVertical(gallery, flag)
    if flag
        each item in gallery
            
            .square-gallery__fram
                img.square-gallery__square(src=require('../images/'+item.img))
                br
                b Вулкан
                br
                p= item.text
    else
        each item in gallery.slice().reverse()
            .square-gallery__fram
                img.square-gallery__square(src=require('../images/'+item.img))
                br
                b Вулкан
                br
                p= item.text
                 
mixin createArticle(article, flag)  
    .articles__article
            .article__title
              h3= article.title 
            
            .article__content
                .content__text
                    each par, i in article.paragraphs 
                        if i === article.paragraphs.length - 1
                            p= par
                                if (flag)
                                    a(href="#" style = "margin-right: auto") Подробнее»
                                else
                                    a(href="#" style = "margin-left: auto") Подробнее»
                        else
                            p= par
                img(src=require("../images/"+article.img))     
mixin volcanoInfo(name, volcanos)
    each value, key in volcanos
        if key === name
            p= value            
mixin createTable(data)
    table(border = "1px" cellpadding = 5)
        tr
            th Магнитуда
            th Населеный пункт
            th Расстояние км.
            th Глубина км.
            th Дата
        each item in data
            tr
                td= item.magn
                td= item.city 
                td= item.dist 
                td= item.depth 
                td= item.date 

    
